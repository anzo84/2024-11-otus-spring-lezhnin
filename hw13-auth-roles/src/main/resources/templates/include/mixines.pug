mixin formMultipleSelect(multipleSelectId, title, placeHolder)
    .form-group
        label(for=multipleSelectId)=title
        select.form-control.select2(
            id=multipleSelectId
            multiple="multiple"
            required
            data-theme="bootstrap4"
            data-placeholder=placeHolder
            data-allow-clear="true")

mixin formSelect(selectId, title, dataNotSelected)
    .form-group
        label(for=selectId)=title
        select.form-control.select2(
            id=selectId
            data-theme="bootstrap4"
            required
            data-not-selected=dataNotSelected)